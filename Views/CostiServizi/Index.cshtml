@model CostoServizioListViewModel
<div class="row">
    <div class="col-md">
        <div class="card">
            <div class="card-header">Prezzi Servizi</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm">
                            <div class="card-text">
                                <div class="row">
                                    <div class="col-md testo-bt">I costi dei servizi non deve essere modificato se non su richiesta dell'amministrazione.</div>
                                </div>
                                <div class="row">&nbsp;</div>
                                <div class="row">
                                    <div class="col-md-3 titolo-tabella-bt"><costo-order-link order-by="TipoServizio" Input="@Model.Input">Tipo Servizio</costo-order-link></div>
                                    <div class="col-md-2 titolo-tabella-bt">Costo Fisso</div>
                                    <div class="col-md-2 titolo-tabella-bt">Costo al km</div>
                                    <div class="col-md-2 titolo-tabella-bt">2Â° Trasp.</div>
                                    <div class="col-md-2 titolo-tabella-bt">Fermo macchina</div>
                                    <div class="col-md-1"></div>
                                </div>
                                @foreach (CostoServizioViewModel costoservizio in Model.CostoServizio.Results)
                                {
                                    <hr>
                                    <div class="row riga-height">
                                        <div class="col-md-3 testo-tabella-bt">@costoservizio.TipoServizio</div>
                                        <div class="col-md-2 testo-tabella-bt">@costoservizio.CostoFisso</div>
                                        <div class="col-md-2 testo-tabella-bt">@costoservizio.CostoKm</div>
                                        <div class="col-md-2 testo-tabella-bt">@costoservizio.SecondoTrasportato</div>
                                        <div class="col-md-2 testo-tabella-bt">@costoservizio.FermoMacchina</div>
                                        <div class="col-md-1 d-flex align-items-center">
                                        <a class="btn btn-outline-primary" asp-controller="CostiServizi" asp-action="Detail" asp-route-id="@costoservizio.Id"><i class="fas fa-info"></i></a>
                                    </div>
                                    </div>
                                }
                                <div class="row">&nbsp;</div>
                                <vc:pagination-bar model="@Model"></vc:pagination-bar>
                                <div class="row">&nbsp;</div>
                                <div class="row">
                                    <div class="col-md testo-bt">Il rimborso degli altri servizi &egrave; deciso dalle convenzioni firmate o altri accordi dell'associazione verso terzi.
                                        Il rimborso dei servizi di 118 e Guardia Medica &egrave; regolamentato dalla Regione di appartenenza.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>