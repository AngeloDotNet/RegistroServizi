@model AssociazioneEditInputModel
<div class="container spaces-top">
    <form method="POST">
        <input type="hidden" asp-for="@Model.Id">
        <div class="card">
            <div class="card-header">Modifica associazione</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12" asp-validation-summary="All"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <label asp-for="Denominazione" class="labtitolo-tabella-bt"></label>
                                <input type="text" asp-for="Denominazione" class="form-control">
                                <span asp-validation-for="Denominazione"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="Sigla" class="labtitolo-tabella-bt"></label>
                                <input type="text" asp-for="Sigla" class="form-control">
                                <span asp-validation-for="Sigla"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="Indirizzo" class="labtitolo-tabella-bt"></label>
                                <input type="text" asp-for="Indirizzo" class="form-control">
                                <span asp-validation-for="Indirizzo"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                    <label asp-for="Comune" class="labtitolo-tabella-bt"></label>
                                    <input type="text" asp-for="Comune" class="form-control">
                                    <span asp-validation-for="Comune"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="Cap" class="labtitolo-tabella-bt"></label>
                                <input type="text" asp-for="Cap" class="form-control">
                                <span asp-validation-for="Cap"></span>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="Provincia" class="labtitolo-tabella-bt"></label>
                                <input type="text" asp-for="Provincia" class="form-control">
                                <span asp-validation-for="Provincia"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-md-9"></div>
                        <div class="col-md-3">
                            <a class="btn btn-outline-secondary ml-3" asp-action="Detail" asp-route-id="@Model.Id"><i class="fas fa-reply"></i> Annulla</a>&nbsp;
                            <button type="submit" class="btn btn-outline-success"><i class="fas fa-save"></i> Aggiorna</button>
                        </div>
                    </div>
                </div>
        </div>
    </form>
</div>