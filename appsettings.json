{
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 5242880
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "ConnectionStrings": {
      "Default": "Data Source=Data/MyRegistroServizi.db",
      "Application": "Data Source=Data/MyApplication.db"
  },
  "Applicazione": {
    "Titolo": "Registro Servizi 2.0"
  },
  "CostoServizio": {
    "PerPage": 10,
    "Order": {
            "By": "Id",
            "Ascending": true,
            "Allow": ["Id", "TipoServizio"]
    }
  },
  "Cliente": {
    "PerPage": 10,
    "Order": {
            "By": "Id",
            "Ascending": true,
            "Allow": ["Id", "RagioneSociale"]
    }
  },
  "Socio": {
    "PerPage": 10,
    "Order": {
            "By": "Id",
            "Ascending": true,
            "Allow": ["Id", "Tessera", "Nominativo"]
    }
  },
  "Ospedale": {
    "PerPage": 10,
    "Order": {
            "By": "Id",
            "Ascending": true,
            "Allow": ["Id", "Clinica", "Comune"]
    }
  },
  "Smtp": {
    "Host": "smtp.example.org",
    "Port": 25,
    "Security": "StartTls",
    "Username": "Username del server SMTP",
    "Password": "Password del server SMTP",
    "Sender": "Admin Area <noreply@example.org>"
  },
  "Users": {
    "NotificationEmailSupportRecipient": "support@example.com",
    "AssignAdministratorRoleOnRegistration": "admin@example.com"
  }
}