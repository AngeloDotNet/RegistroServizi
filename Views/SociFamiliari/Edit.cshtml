@model SocioFamiliareEditInputModel
<form method="POST">
    <input type="hidden" asp-for="@Model.Id">
    <input type="hidden" asp-for="@Model.SocioId">
    <div class="card">
        <div class="card-header">Modifica dati socio familiare</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm">
                        <div class="card-text">
                            <div class="row">
                                <div class="col-12" asp-validation-summary="All"></div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="form-group">
                                        <label asp-for="Familiare" class="labtitolo-tabella-bt"></label><br>
                                        <input type="text" asp-for="Familiare" class="form-control">
                                        <span asp-validation-for="Familiare"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">&nbsp;</div>
                            <div class="row">
                                <div class="col-md-10"></div>
                                <div class="col-md-2">
                                    <a class="btn btn-outline-secondary" asp-controller="Soci" asp-action="Detail" asp-route-id="@Model.SocioId"><i class="fas fa-reply"></i></a>&nbsp;
                                    <button type="submit" class="btn btn-outline-success"><i class="fas fa-save"></i></button>&nbsp;
                                    <button class="btn btn-outline-danger" type="button" data-toggle="modal" data-target="#delete-modal"><i class="fas fa-trash-alt"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <input type="hidden" asp-for="@Model.SocioId">
    <div id="delete-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="delete-modal-title" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delete-modal-title">Conferma eliminazione</h5>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Stai per eliminare un familiare del socio e non potrai recuperarlo. Confermi l'eliminazione?</p>
                </div>
                <div class="modal-footer justify-content-between">
                    <button class="btn btn-light" type="button" data-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-danger">Conferma</button>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_Validation"></partial>
}