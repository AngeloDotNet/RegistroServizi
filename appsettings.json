{
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 5242880
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "ConnectionStrings": {
      "Default": "Data Source=Data/MyRegistroServizi.db"
  },
  "Applicazione": {
    "Titolo": "Registro Servizi 2.0"
  },
  "CostoServizio": {
    "PerPage": 5,
    "Order": {
            "By": "Id",
            "Ascending": true,
            "Allow": ["Id", "TipoServizio", "CostoFisso"]
    }
  },
  "Cliente": {
    "PerPage": 5,
    "Order": {
            "By": "Id",
            "Ascending": true,
            "Allow": ["Id", "RagioneSociale"]
    }
  }
}