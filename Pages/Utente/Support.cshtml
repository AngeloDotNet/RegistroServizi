@model RegistroServizi.Pages.Utente.SupportModel
<h1>Hai bisogno di aiuto ? Inviaci la tua domanda !</h1>
<div class="row">
    <div class="col-12">
        <form method="POST">
            <div asp-validation-summary="All"></div>
            <label asp-for="Question"></label>
            <textarea asp-for="Question" class="form-control mb-3" rows="10"></textarea>
            <button type="submit" class="btn btn-primary mt-3"><i class="far fa-paper-plane"></i> Invia domanda</button>
        </form>
    </div>
</div>
@section Scripts
{
<partial name="_Validation"></partial>
}